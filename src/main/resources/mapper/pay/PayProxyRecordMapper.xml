<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper   PUBLIC "-//ibatis.apache.org//DTD Mapper 3.0//EN"
        "http://ibatis.apache.org/dtd/ibatis-3-mapper.dtd"
        >
<mapper namespace="com.city.city_collector.admin.pay.dao.PayProxyRecordDao">
    <!--查询分页数据-->
    <select id="queryPage" parameterType="Map" resultType="Map">
        select id,CREATE_TIME createTime,`no`,proxy_no proxyNo,order_sn
        orderSn,type,money,balance,remark,reason,ratio,commission,remark1
        from pay_proxy_record
        <where>

            <if test="proxyId !=null and proxyId !=''">
                and proxy_id=#{proxyId}
            </if>

            <if test="orderSn !=null and orderSn !=''">
                and order_sn like "%"#{orderSn}"%"
            </if>

            <if test="startTime !=null and startTime !=''">
                and CREATE_TIME <![CDATA[  >=  ]]> #{startTime}
            </if>

            <if test="endTime !=null and endTime !=''">
                and CREATE_TIME <![CDATA[  <  ]]>#{endTime}
            </if>

            <if test="type !=null and type !=''">
                and type=#{type}
            </if>

        </where>

        <if test="orderby !=null and orderby !=''">
            order by ${orderby}
        </if>
        <if test="orderby ==null">
            order by CREATE_TIME desc
        </if>

        limit #{start},#{end}
    </select>
    <!--查询总体记录数-->
    <select id="queryCount" parameterType="Map" resultType="int">
        SELECT count(1) count
        from pay_proxy_record
        <where>

            <if test="proxyId !=null and proxyId !=''">
                and proxy_id=#{proxyId}
            </if>

            <if test="orderSn !=null and orderSn !=''">
                and order_sn like "%"#{orderSn}"%"
            </if>

            <if test="startTime !=null and startTime !=''">
                and CREATE_TIME <![CDATA[  >=  ]]> #{startTime}
            </if>

            <if test="endTime !=null and endTime !=''">
                and CREATE_TIME <![CDATA[  <  ]]>#{endTime}
            </if>

            <if test="type !=null and type !=''">
                and type=#{type}
            </if>

        </where>
    </select>
    <!--添加记录-->
    <insert id="addSave" parameterType="com.city.city_collector.admin.pay.entity.PayProxyRecord" useGeneratedKeys="true"
            keyProperty="id">
        insert into
        pay_proxy_record(no,proxy_no,order_sn,type,money,balance,remark,reason,proxy_id,proxy_name,ratio,commission,remark1)
        value(#{no},#{proxyNo},#{orderSn},#{type},#{money},#{balance},#{remark},#{reason},#{proxyId},#{proxyName},#{ratio},#{commission},#{remark1})
    </insert>
    <!--查询单条记录-->
    <select id="querySingle" parameterType="Map" resultType="com.city.city_collector.admin.pay.entity.PayProxyRecord">
        select id,`no`,proxy_no proxyNo,order_sn orderSn,type,money,balance,remark,reason,ratio,commission,remark1
        from pay_proxy_record where id=#{id}
    </select>
    <!--编辑数据-->
    <update id="editSave" parameterType="com.city.city_collector.admin.pay.entity.PayProxyRecord">
        update pay_proxy_record
        <set>
            <!--
                <if test="paramgroup_id !=null and paramgroup_id !=''">
                      paramgroup_id=#{paramgroup_id},
                  </if>
                -->

        </set>
        where id=#{id}
    </update>

    <!--删除数据-->
    <delete id="delete" parameterType="java.lang.String">
        delete from pay_proxy_record where id in (${_parameter})
    </delete>
</mapper>
