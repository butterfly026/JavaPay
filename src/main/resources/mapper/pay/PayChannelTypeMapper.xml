<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper   PUBLIC "-//ibatis.apache.org//DTD Mapper 3.0//EN"
        "http://ibatis.apache.org/dtd/ibatis-3-mapper.dtd"
        >
<mapper namespace="com.city.city_collector.admin.pay.dao.PayChannelTypeDao">
    <!--查询分页数据-->
    <select id="queryPage" parameterType="Map" resultType="Map">
        SELECT id,`name`,descript,code
        from pay_channel_type
        <where>

            <if test="name !=null and name !=''">
                and `name` like "%"#{name}"%"
            </if>

            <if test="code !=null and code !=''">
                and `code` like "%"#{code}"%"
            </if>
        </where>
        limit #{start},#{end}
    </select>
    <!--查询总体记录数-->
    <select id="queryCount" parameterType="Map" resultType="int">
        SELECT count(1) count
        from pay_channel_type
        <where>

            <if test="name !=null and paramgroup_id !=''">
                and `name` like "%"#{name}"%"
            </if>

        </where>
    </select>
    <!--添加记录-->
    <insert id="addSave" parameterType="com.city.city_collector.admin.pay.entity.PayChannelType" useGeneratedKeys="true"
            keyProperty="id">
        insert into pay_channel_type(`name`,descript,code)
        value(#{name},#{descript},#{code})
    </insert>
    <!--查询单条记录-->
    <select id="querySingle" parameterType="Map" resultType="com.city.city_collector.admin.pay.entity.PayChannelType">
        select id,`name`,descript,code
        from pay_channel_type where id=#{id}
    </select>

    <select id="queryAllList" parameterType="Map" resultType="com.city.city_collector.admin.pay.entity.PayChannelType">
        select id,`name`,descript,code
        from pay_channel_type
        <where>
            <if test="code !=null and code !=''">
                and `code`= #{code}
            </if>
            <if test="ncode !=null and ncode !=''">
                and `code` <![CDATA[  <>  ]]> #{ncode}
            </if>
        </where>
    </select>

    <select id="queryChannelTypeByCode" parameterType="java.lang.String"
            resultType="com.city.city_collector.admin.pay.entity.PayChannelType">
        select id,`name`,descript,code
        from pay_channel_type
        where `code`= #{code}
    </select>
    <!--编辑数据-->
    <update id="editSave" parameterType="com.city.city_collector.admin.pay.entity.PayChannelType">
        update pay_channel_type
        set name=#{name},descript=#{descript},code=#{code}
        where id=#{id}
    </update>

    <!--删除数据-->
    <delete id="delete" parameterType="java.lang.String">
        delete from pay_channel_type where id in (${_parameter})
    </delete>
</mapper>
